import java.io.*;
import java.util.*;
public class Main 
{
  //Delimiters that must be in the CSV file
  private static final String DELIMITER = ",";
  private static final String SEPARATOR = "\n";
    
    //File header
    private static final String HEADER = "Author, Path, Name, Servings, Ingredients, Instructions";
    
    public static void main(String args[])
    {
      FileWriter file = null;
      
      try
      {
        file = new FileWriter("Recipes.csv");
        //Add header
        file.append(HEADER);
        //Add a new line after the header
        file.append(SEPARATOR);
      
        file.close();
      }
      catch(Exception e)
      {
        e.printStackTrace();
      }
    }
}
